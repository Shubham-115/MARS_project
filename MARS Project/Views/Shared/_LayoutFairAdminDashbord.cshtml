<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MARS_SuperAdmin</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <style>
        /* ===== NAVBAR COLORS ===== */
        .navbar {
            background: linear-gradient(90deg, #1e3c72, #2a5298);
        }

        /* Brand */
        .navbar-brand {
            font-weight: 700;
            color: #ffffff !important;
            letter-spacing: 0.5px;
        }

        /* Nav Links */
        .navbar .nav-link {
            color: #e0e6f1 !important;
            font-weight: 500;
            padding: 8px 14px;
            transition: all 0.3s ease-in-out;
        }

            /* Hover (Mouse Over) */
            .navbar .nav-link:hover {
                color: #00f2fe !important;
                background-color: rgba(255, 255, 255, 0.15);
                border-radius: 6px;
                transform: translateY(-2px);
            }

        /* Logout Special */
        .logout-link {
            color: #ffb703 !important;
            font-weight: 600;
        }

            .logout-link:hover {
                color: #ff4d4d !important;
                background-color: rgba(255, 77, 77, 0.15);
                transform: scale(1.1);
            }

        /* Main Content */
        main {
            padding-top: 30px;
        }

        /* Footer */
        footer {
            background-color: #f1f4f9;
            padding: 15px 0;
            font-size: 14px;
        }
    </style>
</head>

<body>

    <!-- HEADER -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow">
            <div class="container-fluid">

                <a class="navbar-brand" asp-controller="FairAdmin" asp-action="Dashbord">
                    <i class="bi bi-building"></i> MARS_FairAdmin
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="FairAdmin" asp-action="Dashbord">
                                <i class="bi bi-house-door-fill"></i> Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="FairAdmin" asp-action="CreateFair">
                                <i class="bi bi-plus-circle-fill"></i> Create Fair
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="FairAdmin" asp-action="UpdateFair">
                                <i class="bi bi-pencil-square"></i> Update Fair
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="FairAdmin" asp-action="FairAdmin">
                                <i class="bi bi-pencil-square"></i> FairAdmin
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="FairAdmin" asp-action="FairStatus">
                                <i class="bi bi-toggle-on"></i> Active / Deactive Fair
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link logout-link"
                               asp-controller="FairAdmin" asp-action="LogOut">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- BODY -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="border-top text-muted text-center">
        <div class="container">
            &copy; 2025 - MARS_SuperAdmin
        </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
