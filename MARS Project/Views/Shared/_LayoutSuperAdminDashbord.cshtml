<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MARS_SuperAdmin</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Optional: Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MARS_SuperAdmin.styles.css" asp-append-version="true" />

    <style>
        /* Custom Navbar Styling */
        .navbar {
            background: linear-gradient(90deg, #4e73df, #1cc88a);
        }

            .navbar .nav-link {
                color: #fff !important;
                font-weight: 500;
                transition: color 0.3s;
            }

                .navbar .nav-link:hover {
                    color: #f8f9fa !important;
                }

        .navbar-brand {
            font-weight: bold;
            color: #fff !important;
        }

        /* Footer Styling */
        footer {
            background-color: #f8f9fa;
            padding: 15px 0;
        }

        /* Container Padding */
        .container main {
            padding-top: 30px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="SuperAdmin" asp-action="Dashbord">
                    <i class="bi bi-building"></i> MARS_SuperAdmin
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="SuperAdmin" asp-action="Dashbord">
                                <i class="bi bi-house-door-fill"></i> Home
                            </a>
                        </li>
                       
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="SuperAdmin" asp-action="CreateFair">
                                <i class="bi bi-plus-circle-fill"></i> Create Fair
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="SuperAdmin" asp-action="UpdateFair">
                                <i class="bi bi-pencil-square"></i> Update Fair
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="SuperAdmin" asp-action="DeleteFair">
                                <i class="bi bi-trash-fill"></i> Delete Fair
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-area="" asp-controller="SuperAdmin" asp-action="LogOut"
                               style="color: #ffc107; transition: color 0.3s;"
                               onmouseover="this.style.color='#dc3545';"
                               onmouseout="this.style.color='#ffc107';">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </a>
                        </li>
    

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted text-center">
        <div class="container">
            &copy; 2025 - MARS_SuperAdmin - <a asp-area="" asp-controller="Admin" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
