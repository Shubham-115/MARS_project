@model MARS_Project.Models.FairAdmin.Subsector

@{
    ViewData["Title"] = "CreateSubSector";
    Layout = "~/Views/Shared/_LayoutFairAdminDashbord.cshtml";
}
@if (TempData["insertResult"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["insertResult"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<h1>CreateSubSector</h1>

<h4>Subsector</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSubSector">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="SectorID" class="control-label"></label>
                <input asp-for="SectorID" class="form-control" type="text" />
                <span asp-validation-for="SectorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubSectorName" class="control-label"></label>
                <input asp-for="SubSectorName" class="form-control" />
                <span asp-validation-for="SubSectorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupName" class="control-label"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Sub Sectro" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Dashbord">Back to List</a>
</div>

