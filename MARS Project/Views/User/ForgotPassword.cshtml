@model MARS_Project.Models.ForgotPassword

@{
    ViewData["Title"] = "ForgotPassword";
}

<h1>ForgotPassword</h1>



<hr />
<div class="row">

    <div style="color:red; text-align:center">@TempData["NotExist"]</div>
    <div class="col-4 offset-4 border border-2 border-dark rounded">
        <form asp-action="ForgotPassword"method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmailID" class="control-label"></label>
                <input asp-for="EmailID" class="form-control" autocomplete="off" placeholder="Enter Registered EmailID" />
                <span asp-validation-for="EmailID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MobileNo" class="control-label"></label>
                <input asp-for="MobileNo" class="form-control" autocomplete="off" placeholder="Enter Registered Mobile No " />
                <span asp-validation-for="MobileNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Verify" class="btn btn-primary w-100 mt-2 mb-2 " />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

