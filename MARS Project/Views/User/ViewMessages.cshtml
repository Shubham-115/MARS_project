@{
    ViewData["Title"] = "ViewMessages";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            @* Info message *@
            @if (TempData["msg1"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    @TempData["msg1"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @* Regenerate message *@
            @if (TempData["Regenerate"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @Html.Raw(TempData["Regenerate"])
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @* Success / OTP verification messages *@
            @if (TempData["msg2"] != null)
            {
                <div class="card border-success shadow-sm mb-3">
                    <div class="card-body text-center">
                        @Html.Raw(TempData["msg2"])
                    </div>
                </div>
            }

            @if (TempData["verify"] != null)
            {
                <div class="card border-primary shadow-sm mb-3">
                    <div class="card-body text-center">
                        @Html.Raw(TempData["verify"])
                    </div>
                </div>
            }

            @* Login button *@
            

        </div>
    </div>
</div>
