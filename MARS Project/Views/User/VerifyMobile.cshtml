@model MARS_Project.Models.Account.VerifyMobile

@{
    ViewData["Title"] = "MobileVerify";
}

@if (TempData["EmailSuccess"] != null)
{
    <div class="alert alert-success">
        @Html.Raw(TempData["EmailSuccess"])

    </div>
}
<h4>VerifyMobile</h4>
<hr />
<div class="row">

    <div style="text-align:center; color:red"> @TempData["msg"]</div>
    <div style="text-align:center; color:red">@TempData["notVerify"]</div>
    <div class="col-4 offset-4 border border-1 border-dark rounded">

        <div class="text-center text-danger">
            @Html.Raw(TempData["OTP"])
        </div>
      



        <div style="text-align:center; color:red"> @TempData["msg2"]</div>
        <div style="text-align:center; color:red">@TempData["Error"]</div>
        <form asp-action="VerifyMobile" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (TempData["HideMobile"] == null)
            {
                <div class="form-group mb-3">
                    <label asp-for="MobileNo" class="form-label"></label>
                    <input asp-for="MobileNo"
                           id="MobileNo"
                           class="form-control"
                           autocomplete="off"
                           placeholder="Enter your Mobile Number" />
                    <span asp-validation-for="MobileNo" class="text-danger"></span>
                </div>
            }
            else
            {
                <!-- Mobile number hidden but value preserved -->
                <input type="hidden" asp-for="MobileNo" />
            }
            <div class="form-group">
                <label asp-for="OTP" class="control-label"></label>
                <input asp-for="OTP" id="Otp" class="form-control" autocomplete="off" placeholder="Enter your OTP" />
                <span asp-validation-for="OTP" class="text-danger"></span>
            </div>




            <div class="form-group">
                <input type="submit" value="Submit" name="ActionType" class="btn btn-primary mb-2 mt-2 w-100" />
            </div>


            <div class="form-group">
                <input type="submit" value="Send_OTP" id="btnSendOtp" name="ActionType" class="btn btn-primary mb-2 mt-2 w-100" />
            </div>
        </form>
    </div>
    </div>


    <div>
        <a asp-action="Index">Back to List</a>
    </div>

@section Scripts {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                var btnSendOtp = document.getElementById("btnSendOtp");

                // Check if server set TempData to trigger timer
                var startTimer = '@TempData["StartOTPTimer"]' === 'true';

                if (startTimer) {
                    disableButtonWithTimer(btnSendOtp, 60); // disable for 60 seconds
                }

                function disableButtonWithTimer(button, seconds) {
                    button.disabled = true;
                    var timeLeft = seconds;
                    button.value = "Resend OTP (" + timeLeft + "s)";

                    var timer = setInterval(function () {
                        timeLeft--;
                        button.value = "Resend OTP (" + timeLeft + "s)";
                        if (timeLeft <= 0) {
                            clearInterval(timer);
                            button.disabled = false;
                            button.value = "Resend OTP";
                        }
                    }, 1000);
                }
            });
        </script>
}

