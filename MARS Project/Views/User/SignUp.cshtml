@model MARS_Project.Models.SignUp
@{
    ViewData["Title"] = "SignUp";
}

<h1>SignUp</h1>

<hr />
<div class="row">
    <div style="color:mediumspringgreen; background-color:lightyellow; text-align:center">@ViewData["msg"]</div>

    <div class="col-4 offset-4 border border-2 border-dark rounded">
        <div style="color:coral">@TempData["msg"]</div>
        <div style="color:red; text-align:center">@TempData["notVerify"]</div>

        <form asp-action="SignUp" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div id="myform" class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" autocomplete="off" placeholder="Enter First Name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" autocomplete="off" placeholder="Enter Last Name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmailID" class="control-label"></label>
                <input asp-for="EmailID" id="EmailID" class="form-control" autocomplete="off" placeholder="Enter Email " />
                <span asp-validation-for="EmailID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MobileNo" class="control-label"></label>
                <input asp-for="MobileNo" id="MobileNo" class="form-control" autocomplete="off" placeholder="Enter Mobile No" />
                <span asp-validation-for="MobileNo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-outline-primary mt-2 mb-2 w-100" />
            </div>

            <div class="form-group">
                <a asp-action="Login" asp-controller="User" class="btn btn-outline-primary mt-2 mb-2 w-100">Login</a>
            </div>

        </form>

    </div>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
