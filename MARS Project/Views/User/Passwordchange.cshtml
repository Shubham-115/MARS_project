@model MARS_Project.Models.Account.PasswordChange
@{
    ViewData["Title"] = "Passwordchange";
}

<h1>Passwordchange</h1>


<hr />
<div class="row">    
    
    <div class="col-4 offset-4 border border-2 border-dark rounded">
        <form asp-action="Passwordchange" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PasswordHash" class="control-label"></label>
                <input type="password" asp-for="PasswordHash" class="form-control"autocomplete="off" placeholder="Enter New PassWord"/>
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <div style="color:red"> @ViewData["MissMatch"]</div>
                <input asp-for="ConfirmPassword" class="form-control"autocomplete="off" placeholder="Confirm your Password"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Change" class="btn btn-primary mt-2 mb-2 w-100" />
                @* <a asp-action="SignUp" asp-controller="Account" class="btn btn-outline-primary mt-2 mb-2 w-100">SignUp</a> *@

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Home</a>
</div>

